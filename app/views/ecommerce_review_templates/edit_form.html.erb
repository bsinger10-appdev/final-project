<!-- Validation failure messages -->
<% if @ecommerce_review.errors.any? %>
  <% @ecommerce_review.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit ecommerce review #<%= @ecommerce_review.id %>
</h1>

<hr>

<form action="/update_ecommerce_review/<%= @ecommerce_review.id %>" method="post">
  <!-- Label and input for site_name -->
  <div class="form-group">
    <label for="site_name">
      Site name
    </label>

    <input type="text" id="site_name" name="site_name" class="form-control" value="<%= @ecommerce_review.site_name %>">
  </div>
  
    <!-- Label and input for product_number -->
  <div class="form-group">
    <label for="product_name">
      Product number
    </label>

    <input type="text" id="product_number" name="product_number" class="form-control" value="<%= @ecommerce_review.product_number %>">
  </div>

  <!-- Label and input for review_date -->
  <div class="form-group">
    <label for="review_date">
      Review date
    </label>

    <input type="text" id="review_date" name="review_date" class="form-control" value="<%= @ecommerce_review.review_date %>">
  </div>

  <!-- Label and input for review_rating -->
  <div class="form-group">
    <label for="review_rating">
      Review rating
    </label>

    <input type="text" id="review_rating" name="review_rating" class="form-control" value="<%= @ecommerce_review.review_rating %>">
  </div>

  <!-- Label and input for review_text -->
  <div class="form-group">
    <label for="review_text">
      Review text
    </label>

    <input type="text" id="review_text" name="review_text" class="form-control" value="<%= @ecommerce_review.review_text %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update ecommerce review
  </button>
</form>

<hr>

<a href="/ecommerce_review">
  Go back
</a>
