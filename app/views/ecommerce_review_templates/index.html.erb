<h1>
  All ecommerce reviews
</h1>

<a href="/ecommerce_reviews/new">
  Add a new ecommerce review
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Site name
    </th>
    
    <th>
      Product number
    </th>

    <th>
      Review date
    </th>

    <th>
      Review rating
    </th>

    <th>
      Review text
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @ecommerce_reviews.each do |ecommerce_review| %>
  <tr>
    <td>
      <%= ecommerce_review.id %>
    </td>

    <td>
      <%= ecommerce_review.site_name %>
    </td>

    <td>
      <%= ecommerce_review.review_date %>
    </td>

    <td>
      <%= ecommerce_review.review_rating %>
    </td>

    <td>
      <%= ecommerce_review.review_text %>
    </td>

    <td>
      <%= time_ago_in_words(ecommerce_review.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(ecommerce_review.updated_at) %> ago
    </td>

    <td>
      <a href="/ecommerce_reviews/<%= ecommerce_review.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
